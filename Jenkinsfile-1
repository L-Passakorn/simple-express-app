pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                git 'https://github.com/aeff60/simple-express-app.git'
                bat "npm install"
            }
        }

        stage('Scan') {
            steps {
                withSonarQubeEnv(installationName: 'sq1') {
                    bat 'npx sonar-scanner -X -Dsonar.projectKey=sonar-77 -Dsonar.sources=C:\ProgramData\Jenkins\.jenkins\workspace\sonar-77'
                }
            }
        }
    }
}
